<div class="container-fluid " id="slider">
    <div class="row ">
        <div class="col-lg-12 p-0 m-0">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-interval="7500"
                data-pause="false">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="SliderImage" src="img/bodyimage.png" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="SliderImage" src="img/bodyimage2.png" alt="Second slide">
                    </div>
                </div>
            </div>
            <!-- LOGIN FORM -->
            <div class="main-text hidden-xs">
                <div class="col-lg-6 text-center">                    
                    <form action="/signin" method="POST" id="formulario">
                        {{> message}}
                        <div class='form-group'>
                            <h2 class="text-black-50">Iniciar sesi칩n</h2> <!-- letra negra con bootstrap -->
                        </div>
                        <div class='form-group'>
                            <input type="text" class="form-control" name="username" id="username"
                                placeholder="Ingrese usuario" required>
                        </div>
                        <div class='form-group'>
                            <input type="password" class="form-control" name="password" id="password"
                                placeholder="Ingrese contrase침a" required>
                        </div>
                        <div class="form-group" id="botonLogin">
                            <input class="btn btn-block text-white" type="submit" value="INGRESAR">
                        </div>
                        <div class="form-group">
                            <a data-toggle="modal" href="#recoverPasswordModal">Olvide mi contrase침a</a>
                        </div>
                        {{!-- <div class="form-group text-center mt-4 ">
                            <a href="/signup" id="crearUsuario">CREAR USUARIO</a>
                        </div> --}}
                    </form>
                </div>
            </div>            
        </div>
    </div>
</div>

<div class="modal fade text-left" id="recoverPasswordModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Reestablecer Contrase침a</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="recoverPassword" method="POST">
                    <div class="form-group">
                        <label for="usernameInput">Username</label>
                        <input type="text" class="form-control" name="username" id="username" placeholder="Ingrese usuario" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" id="backModalElement" data-dismiss="modal">Volver</button>
                        <button type="submit" class="btn btn-primary" id="createElement">Enviar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>