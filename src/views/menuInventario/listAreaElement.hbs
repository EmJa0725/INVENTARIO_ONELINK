<div class="container-fluid">
    <div class="row mt-4">
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
            <div class="col-6 mx-auto">{{>message}}</div>
            <div class="text-left ml-5">
                <h3>ELEMENTOS ASIGNADOS</h3>
            </div>
            <div class="row">
                <div class="col-md-12 col-lg-6 col-xl-3">
                    <div class="card mt-5 mx-auto" style="">
                        <div class="card-header font-weight-bold">
                            AREA
                        </div>
                        <div class="card-body">
                            <input class="form-control" type="text" id="areaFilter" onkeyup="filterArea()" placeholder="Busqueda area..">
                            <ul id="areaName" class="list-group list-group-flush">
                                {{#each areaWithElementsQuery}}
                                <li data-id="{{IdArea}}" class="btn btn-primary mt-2 areaButton">{{NombreArea}}</li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-lg-6 col-xl-3">
                    <div class="card mt-5 mx-auto" style="">
                        <div class="card-header font-weight-bold">
                            EMPLEADO
                        </div>
                        <div class="card-body" id="employeeCard">
                            <input class="form-control" type="text" id="employeeFilter" onkeyup="filterEmployee()" placeholder="Busqueda empleado..">
                            <ul id="employeeName" class="list-group list-group-flush">
                                
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-md-12 col-lg-12 col-xl-6">
                    <div class="card mt-5 mx-auto" style="width: 35rem;">
                        <div class="card-header font-weight-bold">
                            ELEMENTOS
                        </div>
                        <div class="card-body" id="employeeCard">
                            <input class="form-control" type="text" id="elementFilter" onkeyup="filterElement()" placeholder="Busqueda elemento..">
                            <table id="elementName" class="table table-striped table-dark mt-2">

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>