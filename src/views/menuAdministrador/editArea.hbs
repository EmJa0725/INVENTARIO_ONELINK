<div class="container-fluid">
    <div class="row">
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
            <div class="col-md-8 mx-auto mt-4">
                <div class="card text-md-left">
                    <div class="card-header font-weight-bold">
                        Datos Area
                    </div>
                    <div class="card-body">
                        {{>message}}
                        <form action="/menuAdministrador/editArea/{{areaToEdit.IdArea}}" method="POST">                        
                            <div class="form-group col-md-6 mx-auto">
                                <label for="nombreArea">Nombre Area</label>
                                <input type="text"  value="{{areaToEdit.NombreArea}}" class="form-control" name="nombreArea" id="nombreArea" required autofocus>
                            </div>
                            <div class="form-group col-md-6 mx-auto">
                                <label for="funcionArea">Funcion Area</label>
                                <textarea type="text" class="form-control" name="funcionArea" id="funcionArea" rows="7">{{areaToEdit.FuncionArea}}</textarea>
                            </div>
                        
                            <div class="col text-center">
                                <button class="btn btn-primary col-md-4 sendUserForm" id="boton" type="submit">Enviar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>