<div class="container-fluid">
    <div class="row">
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
            <div class="col-md-12 mt-4">
                <div class="card text-md-left">
                    <div class="card-header  row font-weight-bold">
                        <div class="col-6">Editar datos usuario</div>
                        <div class="col-6 text-right"><a href="/menuAdministrador/listUser">Regresar</a></div> 
                    </div>
                    <div class="card-body">
                        {{>message}}
                        <form action="/menuAdministrador/editUser/{{userToEdit.IdEmpleado}}" method="POST">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="nombre">Nombre</label>
                                    <input type="text" value="{{userToEdit.NombreEmpleado}}" class="form-control" name="nombre" autofocus>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="apellido">Apellido</label>
                                    <input type="text" value="{{userToEdit.ApellidoEmpleado}}" class="form-control" name="apellido" id="apellido" required>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-3">
                                    <label for="sexo">Genero</label>
                                    <select class="custom-select" name="sexo" id="sexo" required>
                                        <option selected="true" value="{{userToEdit.SexoEmpleado}}">{{userToEdit.SexoEmpleado}}</option>
                                        <option value="Masculino">Masculino</option>
                                        <option value="Femenino">Femenino</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-3">
                                    <label for="fNacimiento">Fecha de nacimiento</label>
                                    <input type="date" class="form-control" value="{{userToEdit.fNacimientoEmpleado}}" name="fNacimiento" id="fNacimiento" required>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="correo">Correo</label>
                                    <input type="email" value="{{userToEdit.CorreoEmpleado}}" class="form-control" name="correo" id="correo" required>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="telefono">Telefono</label>
                                    <input type="tel" value="{{userToEdit.TelefonoEmpleado}}" class="form-control" name="telefono" id="telefono">
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="direccion">Direccion</label>
                                    <input type="text" value="{{userToEdit.DireccionEmpleado}}" class="form-control" name="direccion" id="direccion" required>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="cargo">Cargo</label>
                                    <input type="text" value="{{userToEdit.CargoEmpleado}}" class="form-control" name="cargo" id="cargo" required>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="area">Area</label>
                                    <select class="custom-select" name="area" id="area" required>
                                        <option selected="true" value="{{userToEdit.FoArea}}">{{userToEdit.NombreArea}}</option>
                                        {{#each listAreaQuery}}
                                        <option value='{{IdArea}}'>{{NombreArea}}</option>                                        
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label for="username">Username</label>
                                    <input type="text" value="{{userToEdit.Username}}" class="form-control" name="username" id="username" required>
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="password">Contraseña</label>  
                                    <input type="password" value="{{userToEdit.Password}}"class="form-control" name="password" id="password" required>                                  
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="password2">Confirmar contraseña</label>    
                                    <input type="password" value="{{userToEdit.Password}}" class="form-control" name="password2" id="password2" required>                                                                  
                                </div>
                            </div>
                            <h5 class="text-right mr-4" id="passwordCheck"></h5>
                            <div class="col text-center">
                                <button class="btn btn-primary col-md-4 sendUserForm"  onclick="calcularEdad();" id="boton" type="submit">Enviar</button>
                            </div>                            
                        </form>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>