<div class="container-fluid">
    <div class="row">
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
            <div class="col-4 mx-auto mt-2 message">
                {{>message}}
            </div>
            <div class="row">
                <div class="col-10 col-lg-5 m-4">
                    <div class="card border-primary">
                        <div class="card-header font-weight-bold">Mis datos</div>
                        <div class="card-body text-left  mx-auto">
                            <form action="/profile" method="POST" >
                                <div class="form-group">
                                    <label for="name">Nombre</label>
                                    <input type="text" class="form-control" value="{{user.NombreEmpleado}} {{user.ApellidoEmpleado}}" name="name" id="name" readonly>
                                </div>
                                <div class="form-group">
                                    <div class="form-row">
                                        <div class="col">
                                            <label for="position">Cargo</label>
                                            <input type="text" class="form-control" value="{{user.CargoEmpleado}}" name="position" id="position" readonly>
                                        </div>
                                        <div class="col">
                                            <label for="birthdate">Fecha de nacimiento</label>
                                            <input type="text" class="form-control" value="{{fNacimiento}}" name="birthdate" id="birthdate" readonly>
                                        </div>                                
                                    </div>                                
                                </div>
                                <div class="form-group">
                                    <label for="phone">Telefono</label>
                                    <input type="tel" class="form-control" value="{{user.TelefonoEmpleado}}" name="phone" id="phone" required>
                                </div>
                                <div class="form-group">
                                    <label for="address">Direccion</label>
                                    <input type="text" class="form-control" value="{{user.DireccionEmpleado}}" name="address" id="address" required>
                                </div>
                                <div class="form-group">
                                    <label for="email">Correo</label>
                                    <input type="email" class="form-control" value="{{user.CorreoEmpleado}}" name="email" id="email" required>
                                </div>
                                <div class="form-group">
                                    <label for="password">Contraseña</label>
                                    <input type="password" class="form-control" name="password" id="password" required>
                                </div>
                                <button type="submit" class="btn btn-primary">Actualizar</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-10 col-lg-5 m-4">
                    <div class="card border-primary">
                        <div class="card-header font-weight-bold">Cambio contraseña</div>
                        <div class="card-body text-left  mx-auto">
                            <form action="/changePassword" method="POST">
                                <div class="form-group">
                                    <label for="actualPassword">Contraseña actual</label>
                                    <input type="password" class="form-control" name="actualPassword" id="actualPassword" required>
                                </div>
                                <div class="form-group">
                                    <label for="newPassword">Nueva contraseña</label>
                                    <input type="password" class="form-control" name="newPassword" id="newPassword" required>
                                </div>
                                <div class="form-group mb-2">
                                    <label for="confirmPassword">Confirmar contraseña</label>
                                    <input type="password" class="form-control" name="confirmPassword" id="confirmPassword" required>
                                </div>
                                <h5 class="text-right mr-4 mb-2" id="passwordCheck"></h5>
                                <button type="submit" class="btn btn-primary" id="btnChangePassword">Actualizar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>